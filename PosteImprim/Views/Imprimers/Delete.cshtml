@model PosteImprim.Models.Imprimer

@{
    ViewData["Title"] = "Delete";
}

<h1 class="text-center my-4">Delete</h1>

<h3 class="text-center text-danger">Are you sure you want to delete this?</h3>
<div class="card shadow-lg">
    <div class="card-body">
        <h4 class="card-title text-center text-primary mb-4">Imprimer</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-3 text-right font-weight-bold">
                Id
            </dt>
            <dd class="col-sm-9">
                @Model.Id
            </dd>

            @foreach (var position in Model.Positions)
            {
                <dt class="col-sm-3 text-right font-weight-bold">
                    X
                </dt>
                <dd class="col-sm-9">
                    @position.X
                </dd>
                <dt class="col-sm-3 text-right font-weight-bold">
                    Y
                </dt>
                <dd class="col-sm-9">
                    @position.Y
                </dd>
                <dt class="col-sm-3 text-right font-weight-bold">
                    Text
                </dt>
                <dd class="col-sm-9">
                    @position.Text
                </dd>
            }

            <dt class="col-sm-3 text-right font-weight-bold">
                Print Date
            </dt>
            <dd class="col-sm-9">
                @Model.DateImpression.ToString("g")
            </dd>
        </dl>

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="Id" />
            <div class="form-group text-center">
                <input type="submit" value="Delete" class="btn btn-danger btn-lg rounded-pill mx-2" />
                <a asp-action="Index" class="btn btn-secondary btn-lg rounded-pill mx-2">
                    <i class="fas fa-arrow-left"></i> Back to List
                </a>
            </div>
        </form>
    </div>
</div>

<style>
    .card {
        border: 1px solid #004080;
    }

    .card-title {
        color: #004080;
    }

    .font-weight-bold {
        color: #004080;
    }

    .btn-secondary {
        background-color: #004080;
        border-color: #004080;
    }

        .btn-secondary:hover {
            background-color: #00264d;
            border-color: #00264d;
        }

    .rounded-pill {
        border-radius: 50px !important;
    }
</style>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
