@{
    ViewData["Title"] = "Accueil";
}

<!DOCTYPE html>
<html lang="fr">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        /* Palette inspirée des couleurs tunisiennes */
        body {
            background-color: #f8f9fa; /* Fond neutre pour un contraste clair */
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .hero-section {
            background: linear-gradient(135deg, #003366, #005b99); /* Dégradé dynamique */
            color: white;
            padding: 50px 20px;
            text-align: center;
            border-radius: 15px;
            margin-bottom: 30px;
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
        }

            .hero-section img {
                width: 120px;
                border-radius: 50%;
                box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3);
            }

            .hero-section h1 {
                font-size: 2.5rem;
                margin-top: 20px;
            }

            .hero-section p {
                font-size: 1.2rem;
                margin-top: 10px;
            }

        .btn-custom {
            background-color: #ffc107;
            color: #003366;
            font-weight: bold;
            padding: 10px 25px;
            border-radius: 10px;
            transition: transform 0.3s ease, background-color 0.3s ease;
        }

            .btn-custom:hover {
                background-color: #e0a800;
                transform: translateY(-3px);
            }

        .social-section {
            text-align: center;
            margin-top: 40px;
            margin-bottom: 20px;
        }

        .social-links {
            display: flex;
            justify-content: center;
            gap: 30px;
            margin-top: 20px;
        }

            .social-links a {
                font-size: 2rem;
                color: #003366;
                transition: transform 0.3s, color 0.3s;
            }

                .social-links a:hover {
                    color: #005b99;
                    transform: scale(1.1);
                }

        .card {
            border: none;
            border-radius: 15px;
            transition: transform 0.3s, box-shadow 0.3s;
        }

            .card:hover {
                transform: translateY(-5px);
                box-shadow: 0 10px 20px rgba(0, 0, 0, 0.15);
            }

        .card-title {
            color: #003366;
            font-weight: bold;
        }

        .btn-primary {
            background-color: #003366;
            border: none;
            transition: background-color 0.3s ease, transform 0.3s ease;
        }

            .btn-primary:hover {
                background-color: #00224d;
                transform: scale(1.05);
            }

    </style>
</head>

<body>
    <div class="container mt-4">
        <!-- Section principale -->
        <div class="hero-section">
            <img src="https://www.webdo.tn/wp-content/uploads/2018/05/poste.jpg" alt="Logo de Poste">
            <h1>Bienvenue à Poste Imprim</h1>
            <p>Votre partenaire pour les solutions d'impression</p>
            <a href="@Url.Action("Create", "Imprimers")" class="btn btn-custom mt-3">Nouvelle Impression</a>
        </div>

        <!-- Section des réseaux sociaux -->
        <div class="social-section">
            <h2>Suivez-nous sur les réseaux sociaux</h2>
            <div class="social-links">
                <a href="https://www.facebook.com/TunisianPost/" target="_blank" class="fab fa-facebook-square"></a>
                <a href="https://x.com/Poste_Tn?mx=2" target="_blank" class="fab fa-twitter-square"></a>
                <a href="https://www.youtube.com/channel/UCgdccp_xpo1937Jp3N8O_fA" target="_blank"
                   class="fab fa-youtube-square"></a>
            </div>
        </div>

        <!-- Section des cartes (exemple de contenu dynamique) -->
        <div class="row g-4 mt-4">
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body text-center">
                        <h5 class="card-title">Service Rapide</h5>
                        <p class="card-text">Imprimez vos documents rapidement et facilement avec nos automates.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body text-center">
                        <h5 class="card-title">PostImprim</h5>
                        <p class="card-text">Solutions conçues pour une ergonomie optimale et une expérience utilisateur exceptionnelle. .</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body text-center">
                        <h5 class="card-title"><a href="#"></a>Application adaptée</h5>
                        <p> Crée pour faciliter le processus de l'impression chez l'ONP</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Footer -->
   

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
